<img src="/images/burgerimg2.png">
<h1>EAT DA BURGER</h1>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h4>Burgers to eat!</h4>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                    {{> burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h4>Add a Burger You Want to Eat</h4>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Type of Burger:</label>
                    <input type="text" id="burg" name="name">
                </div>

                <button type="submit" class="btn btn-warning" id="add-burg">ADD BURGER</button>
            </form>
        </div>
        <div class="col-sm">
            <h4>Burgers already eaten!</h4>

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burger-block devoured=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>